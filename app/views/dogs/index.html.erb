<h1>Lista Psów</h1>

<% @dogs.each do |dog| %>
  <p>
    <strong>Imię:</strong>
    <%= dog.name %><br>
    <strong>Wiek:</strong>
    <%= dog.age %><br>
    <strong>Opis:</strong>
    <%= dog.description %><br>
    <strong>Adoptowany:</strong>
    <%= dog.adopted ? "Tak" : "Nie" %><br>
    <strong>Wirtualnie zaadoptowany przez:</strong> <%= dog.adopters.count %> użytkowników<br>
    <% if user_signed_in? && !current_user.adopted_dogs.include?(dog) %>
      <%= link_to 'Zaadoptuj', adopt_dog_path(@dog), method: :post, class: 'btn btn-success' %>
    <% end %>
  </p>
<% end %>
