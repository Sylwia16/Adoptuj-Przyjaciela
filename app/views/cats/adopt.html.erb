<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <% if @cat.image.attached? %>
          <%= image_tag @cat.image, class: 'card-img-top', alt: @cat.name %>
        <% else %>
          <%= image_tag 'default_cat.png', class: 'card-img-top', alt: 'Default Cat' %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title">Gratulacje!</h5>
          <p class="card-text">Właśnie zaadoptowałeś <%= @cat.name %>!</p>
          <%= link_to 'Powrót do galerii', user_gallery_cat_user_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>
