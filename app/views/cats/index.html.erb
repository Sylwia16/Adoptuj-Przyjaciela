<h1>Lista Kotów</h1>

<% @cats.each do |cat| %>
  <p>
    <strong>Imię:</strong>
    <%= cat.name %><br>
    <strong>Wiek:</strong>
    <%= cat.age %><br>
    <strong>Opis:</strong>
    <%= cat.description %><br>
    <strong>Adoptowany:</strong>
    <%= cat.adopted ? "Tak" : "Nie" %>
    <strong>Wirtualnie zaadoptowany przez:</strong> <%= cat.adopters.count %> użytkowników<br>
    <% if user_signed_in? && !current_user.adopted_cats.include?(cat) %>
      <%= link_to 'Zaadoptuj', adopt_cat_path(@cat), method: :post, class: 'btn btn-success' %>
    <% end %>
  </p>
<% end %>